<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/login" method="POST class=" mt-3">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="email" id="name" nam="name" class="form-control" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" nam="email" class="form-control" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Passeord</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter password again">
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-5 mb-3">Register</button>
      </form>
      <p>
        Have An Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>